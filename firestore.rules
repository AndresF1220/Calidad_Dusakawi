
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    function isSuperAdmin() {
      // For development purposes, grant superadmin access if the user is authenticated.
      // This will be secured properly later.
      return request.auth != null;
    }

    // Rules for the users collection
    match /users/{userId} {
        // Allow any authenticated user to read any user document. This covers `get` and `list` query requirements.
        allow read: if request.auth != null;
        // Allow any authenticated user to update any profile (for development)
        allow update: if request.auth != null;
        // A user can create their own document. isSuperAdmin can create any.
        allow create: if isOwner(userId) || isSuperAdmin();
        // Superadmin can delete
        allow delete: if isSuperAdmin();
    }
    
    match /areas/{areaId} {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin();
    }

    match /areas/{areaId}/{allChildren=**} {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin();
    }

    match /caracterizaciones/{caracterizacionId} {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin();
    }

    match /folders/{folderId} {
       allow read: if request.auth != null;
       allow write: if isSuperAdmin();
    }

    match /documents/{documentId} {
       allow read: if request.auth != null;
       allow write: if isSuperAdmin();
    }
  }
}
