
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSuperAdmin() {
      // For development purposes, grant superadmin access if the user is authenticated.
      // This will be secured properly later.
      return request.auth != null;
    }

    // Rules for the users collection
    match /users/{userId} {
        // Anyone can query the collection to find a user by cedula for login purposes.
        // This is safe because the rules on the read operation below prevent fetching the whole document.
        allow list: if true;
        // An authenticated user can read their own profile.
        allow read: if request.auth != null && request.auth.uid == userId;
        // Allow any authenticated user to update any profile (for development)
        allow update: if request.auth != null;
        // A user can create their own document. isSuperAdmin can create any.
        allow create: if isSuperAdmin();
        // Superadmin can delete
        allow delete: if isSuperAdmin();
    }

    match /settings/app {
      // Any authenticated user can read the settings.
      allow read: if request.auth != null;
      // Only superadmins can write the settings.
      allow write: if isSuperAdmin();
    }
    
    match /areas/{areaId} {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin();
    }

    match /areas/{areaId}/{allChildren=**} {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin();
    }

    match /caracterizaciones/{caracterizacionId} {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin();
    }

    match /folders/{folderId} {
       allow read: if request.auth != null;
       allow write: if isSuperAdmin();
    }

    match /documents/{documentId} {
       allow read: if request.auth != null;
       allow write: if isSuperAdmin();
    }
  }
}
