rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
    match /areas/{areaId} {
        allow read: if request.auth != null;
        allow write: if false; // Data should be seeded, not written by client
    }
    match /caracterizaciones/{caracterizacionId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null; // Allow logged-in users to create/update
    }
    match /folders/{folderId} {
        allow read, write, delete: if request.auth != null;
    }
    match /files/{fileId} {
        allow read, write, delete: if request.auth != null;
    }
  }
}
