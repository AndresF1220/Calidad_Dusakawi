
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    function isSuperAdmin() {
      // For development purposes, grant superadmin access if the user is authenticated.
      // This will be secured properly later.
      return request.auth != null;
    }

    // Rules for the users collection as a whole
    match /users/{userId} {
        // Any authenticated user can read any profile (for development)
        allow get: if request.auth != null;
        // Any authenticated user can update any profile (for development)
        allow update: if request.auth != null;
        // Superadmin can delete
        allow delete: if isSuperAdmin();
        // A user can create their own document
        allow create: if isOwner(userId);
    }

    match /users {
      // Superadmin can list all users
      allow list: if isSuperAdmin();
    }
    
    match /areas/{areaId} {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin();
    }

    match /areas/{areaId}/{allChildren=**} {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin();
    }

    match /caracterizaciones/{caracterizacionId} {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin();
    }

    match /folders/{folderId} {
       allow read: if request.auth != null;
       allow write: if isSuperAdmin();
    }

    match /documents/{documentId} {
       allow read: if request.auth != null;
       allow write: if isSuperAdmin();
    }
  }
}
