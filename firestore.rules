
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    function getUserRole() {
      // Returns null if the document does not exist
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    function isSuperAdmin() {
      // For development: default to true if no user/role is found
      let role = getUserRole();
      return request.auth == null || role == null || role == 'superadmin';
    }

    // Rules for individual user documents
    match /users/{userId} {
      // A user can read their own profile. A superadmin can read any profile.
      allow get: if isOwner(userId) || isSuperAdmin();
      // A user can update their own profile. A superadmin can update any profile.
      allow update: if isOwner(userId) || isSuperAdmin();
      // Only a superadmin can delete a user.
      allow delete: if isSuperAdmin();
    }
    
    // Rules for the users collection as a whole
    match /users {
        // A superadmin can list all users.
        allow list: if isSuperAdmin();
        // Any authenticated user can create their own user document.
        allow create: if request.auth != null;
    }
    
    match /areas/{areaId} {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin();
    }

    match /areas/{areaId}/{allChildren=**} {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin();
    }

    match /caracterizaciones/{caracterizacionId} {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin();
    }

    match /folders/{folderId} {
       allow read: if request.auth != null;
       allow write: if isSuperAdmin();
    }

    match /documents/{documentId} {
       allow read: if request.auth != null;
       allow write: if isSuperAdmin();
    }
  }
}
