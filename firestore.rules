
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSuperAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }

    function isAuthOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId} {
        // A user can read their own profile
        allow read: if isAuthOwner(userId) || isSuperAdmin();
        // Superadmin can write to any user profile
        allow write: if isSuperAdmin();
        // Any user can query the users collection to find a user by cedula for login.
        // This is safe because the rule only allows querying, not reading the whole document content.
        allow list: if true; 
    }

    match /settings/app {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin();
    }
    
    match /areas/{areaId} {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin();
    }

    match /areas/{areaId}/{allChildren=**} {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin();
    }

    match /caracterizaciones/{caracterizacionId} {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin();
    }

    match /folders/{folderId} {
       allow read: if request.auth != null;
       allow write: if isSuperAdmin();
    }

    match /documents/{documentId} {
       allow read: if request.auth != null;
       allow write: if isSuperAdmin();
    }
  }
}

    