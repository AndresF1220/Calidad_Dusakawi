
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSuperAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }

    function isAuthOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Rules for 'users' collection
    match /users/{userId} {
      // Allow any authenticated user to read any user profile. This is necessary
      // for the role system to work correctly and check other users' roles.
      // User documents do not contain sensitive information.
      allow read: if request.auth != null;
      
      // Allow superadmins to write to any user profile, or users to write to their own.
      allow write: if isSuperAdmin() || isAuthOwner(userId);

      // IMPORTANT: Allow an unauthenticated user to query for a user document by 'cedula'.
      // This is crucial for the login flow but is restricted to only list operations where
      // the query is specifically on the 'cedula' field. It does NOT allow reading document contents.
      allow list: if request.query.keys().hasOnly(['cedula', 'status']);
    }

    // Rules for 'settings' collection
    match /settings/app {
      // Allow any authenticated user to read app settings.
      allow read: if request.auth != null;
      // Only superadmins can write app settings.
      allow write: if isSuperAdmin();
    }
    
    match /settings/company {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin(); // Only superadmins can change the company name
    }

    // Generic rules for CMS-like collections
    match /areas/{areaId} {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin();
    }

    match /areas/{areaId}/{allChildren=**} {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin();
    }

    match /caracterizaciones/{caracterizacionId} {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin();
    }

    match /folders/{folderId} {
       allow read: if request.auth != null;
       allow write: if isSuperAdmin();
    }

    match /documents/{documentId} {
       allow read: if request.auth != null;
       allow write: if isSuperAdmin();
    }
  }
}
